<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mobilesafe.HomeActivity"
    app:theme="@android:style/Theme.NoTitleBar"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="#ffbdff20"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#ff3abcff"
        android:text="安卓卫士" />

    <com.example.ui.FocusedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="20sp"
        android:text="最新安卓卫士，全球首发，谷歌出品，你值得拥有"
        android:textColor="#ff65bdff"
        android:layout_marginTop="20dp"/>


    <GridView
        android:id="@+id/gd_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        />

</LinearLayout>
