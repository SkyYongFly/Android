<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res/com.example"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 广告栏 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="7dp"
            android:src="@drawable/id_bell" />

        <TextView
            android:id="@+id/tv_show_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="体彩大放送"
            android:textSize="15sp" />
    </LinearLayout>

    <com.example.view.MyMiddleItemView
        android:id="@+id/miv_ssq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        test:iv_sign="@drawable/id_ssq"
        test:tv_message="数据加载中"
        test:tv_title="2元赢取1500万   每周二、四、日开奖" />
    <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#D9D6D6"/>

    <com.example.view.MyMiddleItemView
        android:id="@+id/miv_3d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        test:iv_sign="@drawable/id_3d"
        test:tv_message="数据加载中"
        test:tv_title="10选3中奖1000元  每天20:30开" />
    <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#D9D6D6"/>

    <com.example.view.MyMiddleItemView
        android:id="@+id/miv_7lc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        test:iv_sign="@drawable/id_qlc"
        test:tv_message="数据加载中"
        test:tv_title="百万奖  期期开  每周一 三 五开" />

</LinearLayout>