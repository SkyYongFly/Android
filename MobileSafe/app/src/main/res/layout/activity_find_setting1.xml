<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff11ff98"
        android:gravity="center"
        android:text="1、欢迎使用手机防盗"
        android:textColor="#ff3527ff"
        android:textSize="27sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="您的手机防盗卫士:"
        android:textColor="#ff360c6c"
        android:textSize="25sp"/>

    <TextView
        style="@style/text_fd_set1"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="sim卡变更报警"
        />
    <TextView
        style="@style/text_fd_set1"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="GPS追踪"
        />
    <TextView
        style="@style/text_fd_set1"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="远程数据销毁"
        />
    <TextView
        style="@style/text_fd_set1"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="远程锁屏"
        />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:src="@android:drawable/presence_online"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/presence_invisible"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/presence_invisible"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/presence_invisible"/>
</LinearLayout>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/setup1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_next"
            style="@style/button_next"
            android:onClick="next"
            android:text="下一步"/>

    </RelativeLayout>
</LinearLayout>
